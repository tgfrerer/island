function(include_using_absolute_path TMP_INCLUDE_PATH)
    get_filename_component(TMP_INCLUDE_PATH_ABS ${TMP_INCLUDE_PATH} REALPATH BASE_DIR ${ISLAND_BASE_DIR})
    include_directories(${TMP_INCLUDE_PATH_ABS})
endfunction()


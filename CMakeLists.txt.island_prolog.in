        set ( STATIC_LIBRARIES ${LIB_NAME} $CACHE{STATIC_LIBRARIES} CACHE INTERNAL "static_libraries" )
        # message( STATUS "${TMP_INDENT}>>> Static libs: ${STATIC_LIBRARIES}")
    else()
